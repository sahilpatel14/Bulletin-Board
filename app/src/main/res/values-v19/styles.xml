<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom theme for the layout -->
    <style name="BulletinBoardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#388E3C</item>
        <!--<item name="colorPrimaryDark">#2E7D32</item>-->
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#388E3C</item>
    </style>

    <!--theme for the toolbar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:color">@android:color/white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

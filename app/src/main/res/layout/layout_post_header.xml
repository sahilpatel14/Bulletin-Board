<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/post_header"
    android:paddingTop="7dp"
android:layout_marginLeft="@dimen/post_header_margin_left"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/post_user_profile_photo"
    android:src="@drawable/ic_account_circle_black_24dp"
    android:layout_marginLeft="@dimen/post_header_margin"
    android:layout_marginBottom="@dimen/post_header_margin"
    android:layout_width="@dimen/post_header_profile_dimen"
    android:layout_height="@dimen/post_header_profile_dimen" />

<TextView
    android:id="@+id/post_user_name"
    android:text="John Doe"
    android:textColor="@android:color/black"
    android:paddingStart="@dimen/post_header_padding"
    android:layout_marginTop="5dp"
    android:layout_toEndOf="@id/post_user_profile_photo"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/post_time_stamp"
    android:text="14 hours ago"
    android:textColor="@color/timestampColor"
    android:layout_marginTop="5dp"
    android:paddingStart="@dimen/post_header_padding_small"
    android:layout_toEndOf="@id/post_user_name"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/post_options_buttons"
    android:src="@drawable/ic_more_vertical_black_24dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="7dp"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/comment_user_image"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_width="@dimen/comment_user_image_size"
            android:layout_height="@dimen/comment_user_image_size" />

    <TextView
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/comment_user_image"
        android:id="@+id/comment_user_name"
        android:textStyle="bold"
        android:text="John Doe"
        android:textSize="@dimen/post_image_description_size"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_below="@id/comment_user_name"
        android:layout_toRightOf="@id/comment_user_image"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/comment_content_size"
        android:textColor="@color/contentTextColor"
        android:text="@string/string_content_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/comment_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/comment_timestamp"
        android:text="2 hours ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>